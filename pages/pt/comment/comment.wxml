<view class="goods-comment"><block wx:for="{{comment}}" wx:key="{{item.id}}" wx:for-item="item" wx:for-index="ckey"><view class="goods-comment-item flex-col"><view class="goods-comment-user flex-grow-0 flex-row flex-y-center"><view class="comment-user-pic flex-grow-0"><image src="{{item.avatar_url}}"></image></view><view class="comment-user-name flex-grow-0">\n                    {{item.nickname}}\n</view></view><view class="goods-comment-conent flex-grow-1">\n                {{item.content}}\n</view><view class="goods-comment-ginfo">\n                    {{item.addtime}}\n<block wx:for="{{item.attr}}" wx:key="{{item.id}}" wx:for-item="attr" wx:for-index="index">\n                        {{attr.attr_group_name}}:{{attr.attr_name}}\n</block></view><view class="goods-comment-piclist"><block wx:for="{{item.pic_list}}" wx:key="{{item.id}}" wx:for-item="pic" wx:for-index="index"><view class="comment-pic-shell"><image bindtap="bigToImage" data-index="{{ckey}}" data-url="{{pic}}" mode="aspectFit" src="{{pic}}" style="width:160rpx;height:160rpx"></image></view></block></view></view></block></view>
