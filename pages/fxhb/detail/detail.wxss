body{ background-color: #fe6b2e; }
.background { position: fixed; left: 0; top: 0; width: 100%; height: 100%; background: #fe6b2e; z-index: -1; background-size: 100% auto; background-position: top; background-repeat: no-repeat; }
.background wx-image{ width: 100%; height: 100%; }
.rule-btn { position: fixed; right: 0; top: 32rpx; background: rgba(0, 0, 0, .5); color: rgba(255, 255, 255, 0.85); padding: 16rpx 24rpx 16rpx 32rpx; border-radius: 999rpx 0 0 999rpx; font-size: 9pt; }
.rule-bg{ position: fixed; left: 0; top: 0; width: 100%; height: 100%; z-index: 9; background: rgba(0,0,0,.65); opacity:0; visibility: hidden; }
.rule-bg.show{ opacity: 1; visibility: visible; }
.rule-content{ position: fixed; z-index: 10; left: 100rpx; right: 100rpx; top: 200rpx; max-height: calc(100vh - 400rpx); background: #fff; border-radius: 10rpx; padding: 24rpx; opacity: 0; visibility: hidden; transition: 150ms; }
.rule-content.show{ visibility: visible; opacity: 1; }
.rule-close{ padding: 25rpx; position: absolute; font-size: 0; bottom: -100rpx; left: 50%; margin-left: -50rpx; }
.rule-close wx-image{ width: 50rpx; height: 50rpx; border-radius: 999rpx; }
.rule-text{ max-height: calc(100vh - 400rpx - 24rpx * 2); overflow-y: auto; overflow-x: hidden; font-size: 9pt; line-height: 1.5; }
.rule-title{ text-align: center; margin-bottom: 12rpx; }
.after-navber{ background-size: 100% auto; background-color: #fe6b2e; background-repeat: no-repeat; }
.rule-btn{ position: relative; float: right; }
.main-content{ padding-top: 396rpx; }
.share-modal{ position: fixed; top:0; left: 0; width: 100%; height: 100%; z-index: 10; opacity: 0; visibility: hidden; transition: 150ms; }
.share-modal.show{ opacity: 1; visibility: visible; }
.share-modal .modal-bg{ background: rgba(0, 0, 0, .5); width: 100%; height: 100%; top:0; left: 0; position: fixed; z-index: -1; }
.share-modal .modal-box{ width: 606rpx; height: 816rpx; top:50%; left: 72rpx; margin-top: -408rpx; position: fixed; z-index: 1; background-size: 100% 100%; background-color: #fff; border-radius: 16rpx; padding: 448rpx 25rpx 0 25rpx; }
.share-modal .modal-text{ text-align: center; color: #888; margin-bottom: 32rpx; }
.share-modal .modal-text wx-text{ font-size: 15pt; color: #ffc73f; font-weight: bold; }
.share-modal .modal-close{ padding: 25rpx; position: fixed; left: 50%; margin-left: -50rpx; top: 50%; margin-top: 420rpx; }
.share-modal .modal-close wx-image{ width: 50rpx; height: 50rpx; }
.hongbao-info{ background: rgba(255, 255, 255, 0.9); border-radius: 16rpx; margin: 0 24rpx; padding: 50rpx; margin-bottom: 32rpx; }
.user-list{ overflow: hidden; }
.user-list .user-item{ border: 1px solid #ff5c5c; width: 104rpx; height: 104rpx; margin: 24rpx; display: inline-block; overflow: hidden; border-radius: 999rpx; background-color: #fff; float: left; }
.user-list .user-item.none{ border-style: dashed; }
.user-list .user-item wx-image{ width: 100%; height: 100%; }
.hongbao-info-text{ text-align: center; color: #888; margin-bottom: 24rpx; font-size: 9pt; }
.hongbao-info-btn{ height: 88rpx; border-radius: 999rpx; text-align: center; background: #ff5c5c; color: #fff; margin: 0 25rpx; position: relative; }
.hongbao-info-btn wx-image{ width: 48rpx; height: 40rpx; margin-right: 20rpx; display: block; }
.hongbao-info-btn .share-btn{ position: absolute; left: 0; top: 0; width: 100%; height: 100%; border-radius: inherit; opacity: 0; }
.hongbao-info-btn-org{ background: #ffb82f; }
.hongbao-info-btn .pointer-r{ margin-left: 16rpx; width: 16rpx; height: 18rpx; }
.coupon{ background-size: 100% 100%; height: 190rpx; background-repeat: no-repeat; margin-bottom: 24rpx; }
.coupon .coupon-title{ font-size: 15pt; padding-left: 56rpx; color: #8f4c1a; margin-bottom: 16rpx; }
.coupon .coupon-desc{ font-size: 9pt; padding-left: 56rpx; color: #8f4c1a; }
.coupon .coupon-money{ font-size: 19pt; line-height: 1; font-weight: bold; padding-right: 56rpx; color: #ff5c5c; }
.coupon .coupon-unit{ font-size: 11pt; line-height: 1.35; color: #ff5c5c; padding-bottom: 2rpx; }
.user-hongbao{ margin: 25rpx 0; position: relative; }
.user-hongbao .user-avatar{ width: 80rpx; height: 80rpx; border-radius: 999rpx; margin-right: 20rpx; }
.user-hongbao .user-nickname{ white-space: nowrap; text-overflow: ellipsis; overflow: hidden; margin-right: 20rpx; padding-bottom: 5rpx; }
.user-hongbao .best-icon{ font-size: 9pt; position: absolute; right: 0; bottom: -10rpx; color: #ffb82f; }
.user-hongbao .best-icon wx-image{ width: 40rpx; height: 30rpx; margin-right: 20rpx; }
.more-goods{ }
.more-goods .goods-list{ padding: 0 5rpx; }
.more-goods .goods-item-box, .more-goods .goods-item-box wx-view, .more-goods .goods-item-box wx-image, .more-goods .goods-item-box wx-navgator, .more-goods .goods-item-box wx-text { box-sizing: border-box; }
.more-goods .goods-item-box{ width: 50%; padding: 0 5rpx 10rpx 5rpx; display: inline-block; }
.more-goods .goods-item{ display: inline-block; background: #fff; overflow: hidden; width: 100%; }
.more-goods .goods-item wx-image{ width: calc(100% - 20rpx); height: 340rpx; margin: 10rpx 10rpx 0; background-color: #ccc; }
.more-goods .goods-name-box{ overflow: visible; margin-bottom: 20rpx; height: 79rpx; }
.more-goods .goods-name{ display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden; line-height: 1.15; }
.more-goods .goods-price{ color: #ff5c5c; font-weight: bold; }
.more-goods .goods-original-price{ font-size: 9pt; color: #888; text-decoration: line-through; }
.more-goods .buy-btn{ text-align: center; background: #ff5c5c; color: #fff; border-radius: 999rpx; height: 64rpx; line-height: 64rpx; font-size: 9pt; margin-top: 24rpx; }
