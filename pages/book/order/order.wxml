<view class="page {{__page_classes}}"><include src="/commons/header/header" /><view class="body after-navber"><view class="flex-row tab-bar"><view class="flex-grow-1"><navigator class="{{status==0-1?'active':''}}" openType="redirect" url="/pages/book/order/order?status=-1"><text>全部</text></navigator></view><view class="flex-grow-1"><navigator class="{{status==0?'active':''}}" openType="redirect" url="/pages/book/order/order?status=0"><text>待支付</text></navigator></view><view class="flex-grow-1"><navigator class="{{status==1?'active':''}}" openType="redirect" url="/pages/book/order/order?status=1"><text>待使用</text></navigator></view><view class="flex-grow-1"><navigator class="{{status==2?'active':''}}" openType="redirect" url="/pages/book/order/order?status=2"><text>已使用</text></navigator></view><view class="flex-grow-1"><navigator class="{{status==3?'active':''}}" openType="redirect" url="/pages/book/order/order?status=3"><text>退款</text></navigator></view></view><view class="order-list"><block wx:for="{{order_list}}" wx:for-item="item" wx:for-index="index"><view class="order-item"><view bindtap="goToDetails" class="flex-row" data-id="{{item.id}}"><view class="goods-pic flex-grow-0"><block wx:if="{{item.is_pay==1&&(item.is_use==0)&&(item.apply_delete==0)}}" ><view class=" order-leabl">待使用</view></block><block wx:if="{{item.is_pay==0&&(item.is_cancel==0)}}" ><view class=" order-leabl">待支付</view></block><image src="{{item.cover_pic}}"></image></view><view class="flex-grow-1 goods-info"><view class="goods-name">\n                        {{item.goods_name}}\n</view><view class="flex-gorw-0 flex-row money flex-y-bottom"><view class="original_price flex-grow-0">\n                            ¥ {{item.original_price}}\n</view><view class="price flex-grow-0">\n                            ¥ {{item.pay_price}}\n</view></view></view></view><block wx:if="{{item.apply_delete!=1&&(item.is_refund!=1)&&(item.is_comment!=1)}}" ><view class="btn-group flex-row"><block wx:if="{{item.is_pay==1&&(item.is_use==0)&&(item.apply_delete==0)}}" ><block wx:if="{{item.pay_price>0}}" ><view bindtap="applyRefund" class="btn-group-item apply flex-x-center flex-y-cneter" data-id="{{item.id}}">\n                    申请退款\n</view></block><view bindtap="orderQrcode" class="btn-group-item promptly flex-x-center flex-y-cneter" data-index="{{index}}">\n                    立即使用\n</view></block><block wx:if="{{item.is_pay==0&&(item.is_cancel==0)}}" ><view bindtap="orderCancel" class="btn-group-item apply flex-x-center flex-y-cneter" data-id="{{item.id}}">\n                    取消\n</view><view bindtap="GoToPay" class="btn-group-item promptly flex-x-center flex-y-cneter" data-id="{{item.id}}">\n                    支付\n</view></block><block wx:if="{{item.is_use==1&&(item.is_comment==0)}}" ><view bindtap="comment" class="btn-group-item apply flex-x-center flex-y-cneter" data-id="{{item.id}}">\n                    评价\n</view></block></view></block></view></block><block wx:if="{{show_no_data_tip}}" ><view class="no-data-tip">\n            暂无相关订单\n</view></block></view><view bindtap="hide" class="flex-row flex-y-center modal {{hide==1?'hide':''}}"><view class="flex-y-center" style="width:100%;height:800rpx;padding:100rpx;"><view style="background-color:#fff;width:100%;height:100%;border-radius:10rpx;padding:0 50rpx;"><view class="flex-x-center" style="width:100%;height:50rpx;margin-top:50rpx;font-size:13pt;margin-bottom:20rpx">核销二维码</view><image src="{{qrcode}}" style="width:450rpx;height:450rpx;"></image></view></view></view></view><include src="/commons/footer/footer" /></view>
